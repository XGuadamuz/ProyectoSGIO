
@{
    ViewBag.Title = "CierreFinancieroAnual";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Cierre Financiero Anual</h2>

    <!-- Selección del Año Fiscal -->
    <div class="row mb-4">
        <div class="col-md-5">
            <label for="anioFiscal" class="form-label">Año Fiscal</label>
            <select class="form-select" id="anioFiscal">
                <option selected disabled>Seleccione un año</option>
                <option value="2023">2023</option>
                <option value="2022">2022</option>
                <!-- Más años fiscales -->
            </select>
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button class="btn btn-primary w-100" id="generarReporteBtn">Generar Reporte Anual</button>
        </div>
    </div>

    <!-- Verificación de Cuentas Anuales Pendientes -->
    <h4 class="mb-3">Cuentas Pendientes de Revisión</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Código de Cuenta</th>
                <th>Descripción</th>
                <th>Monto</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1001</td>
                <td>Activos Corrientes</td>
                <td>$50,000.00</td>
                <td><span class="badge bg-warning">Pendiente</span></td>
                <td><button class="btn btn-sm btn-primary">Revisar</button></td>
            </tr>
            <!-- Más cuentas -->
        </tbody>
    </table>

    <!-- Botón para iniciar la reconciliación -->
    <button class="btn btn-danger w-100 mt-4" id="iniciarReconciliacionBtn">Iniciar Reconciliación</button>
</div>
