@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<form class="form">
    <p class="title">¡Bienvenido de nuevo!</p>
    <p class="message">Por favor, introduce tus credenciales para acceder a tu cuenta</p>
    <label>
        <input required="" placeholder="" type="email" class="input">
        <span>Correo</span>
    </label>
    <label>
        <input required="" placeholder="" type="password" class="input">
        <span>Contraseña</span>
    </label>
    <button class="submit">Confirmar</button>
    <p class="signin">¿No tiene una cuenta? <a href="#">Crear Cuenta</a> </p>
</form>