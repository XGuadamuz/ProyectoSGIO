@model ProyectoSGIOCore.ViewModels.UsuarioVM
@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<form asp-controller="Acceso" asp-action="Registro" method="post" class="form">
    <p class="title">¡Únete a nosotros!</p>
    <p class="message">Completa el formulario para crear una nueva cuenta y empezar a hacer tus sueños realidad.</p>

    <div class="flex">
        <label>
            <input asp-for="Nombre" class="input" required />
            <span>Nombre</span>
        </label>

        <label>
            <input asp-for="Apellido" class="input" required />
            <span>Apellido</span>
        </label>
    </div>

    <label>
        <input asp-for="Correo" class="input" required />
        <span>Correo</span>
    </label>

    <label>
        <input asp-for="Clave" type="password" class="input" required />
        <span>Contraseña</span>
    </label>

    <label>
        <input asp-for="ConfirmarClave" type="password" class="input" required />
        <span>Confirmar Contraseña</span>
    </label>

    <button type="submit" class="submit">Crear Cuenta</button>

    <p class="signin">¿Ya tiene una cuenta? <a asp-controller="Acceso" asp-action="IniciarSesion">Iniciar Sesión</a></p>
</form>
@if (ViewData["Mensaje"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @ViewData["Mensaje"]
    </div>
}