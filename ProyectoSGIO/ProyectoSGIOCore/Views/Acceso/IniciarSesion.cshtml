@model ProyectoSGIOCore.ViewModels.IniciarSesionVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<form asp-controller="Acceso" asp-action="IniciarSesion" method="post" class="form">
    <p class="title">¡Bienvenido de nuevo!</p>
    <p class="message">Por favor, introduce tus credenciales para acceder a tu cuenta.</p>
    <label>
        <input asp-for="Correo" class="input" required />
        <span>Correo</span>
    </label>

    <label>
        <input asp-for="Clave" type="password" class="input" required />
        <span>Contraseña</span>
    </label>
    <button type="submit" class="submit">Iniciar Sesion</button>
    <p class="signin">¿Ni tiene una cuenta? <a asp-controller="Acceso" asp-action="Registro">Crear Cuenta</a></p>

</form>

@if (ViewData["Mensaje"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @ViewData["Mensaje"]
    </div>
}