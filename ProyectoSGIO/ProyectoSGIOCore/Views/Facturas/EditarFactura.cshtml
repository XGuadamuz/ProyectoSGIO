@model ProyectoSGIOCore.Models.FacturaProveedor

@{
    ViewBag.Title = "Editar Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Factura</h2>

    <form asp-action="EditarFactura" method="post">
        <input type="hidden" asp-for="IdFactura" />
        <div class="form-group">
            <label for="IdProveedor">Proveedor</label>
            <select asp-for="IdProveedor" class="form-control" asp-items="ViewBag.Proveedores">
                <option value="">-- Selecciona un proveedor --</option>
            </select>
        </div>

        <div class="form-group">
            <label for="NumeroFactura">Número de Factura</label>
            <input asp-for="NumeroFactura" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="FechaEmision">Fecha de Emisión</label>
            <input asp-for="FechaEmision" type="date" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="MontoTotal">Monto Total</label>
            <input asp-for="MontoTotal" type="number" step="0.01" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Descripcion">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
    </form>
</div>