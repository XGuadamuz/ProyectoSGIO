@model ProyectoSGIOCore.Models.CierreFinanciero

@{
    ViewBag.Title = "Registrar Cierre Financiero";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Registrar Cierre Financiero</h2>

    <form asp-action="RegistrarCierre" method="post">
        <div class="form-group">
            <label for="Anio">Año</label>
            <input asp-for="Anio" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Observaciones">Observaciones</label>
            <textarea asp-for="Observaciones" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Registrar Cierre</button>
    </form>
</div>
