@model ProyectoSGIOCore.Models.CierreFinanciero

@{
    ViewBag.Title = "Registrar Cierre Financiero Mensual";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Registrar Cierre Financiero Mensual</h2>

    <form asp-action="RegistrarCierreMensual" method="post">
        <div class="form-group">
            <label for="Anio">Año</label>
            <input asp-for="Anio" type="number" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Mes">Mes</label>
            <select asp-for="Mes" class="form-control" required>
                <option value="">Seleccione un mes</option>
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="Observaciones">Observaciones</label>
            <textarea asp-for="Observaciones" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Registrar Cierre</button>
    </form>
</div>
