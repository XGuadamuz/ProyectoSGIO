@model ProyectoSGIOCore.Models.Proyecto
@{
    ViewData["Title"] = "Detalles del Cronograma";
    Layout = "~/Views/Proyecto/MenuProyecto.cshtml";
}

<h2>Gestionar Proyecto: @Model.Nombre</h2>
<p class="project-details">Fecha de Creación: @Model.FechaCreacion.ToShortDateString()</p>

<div class="content-scroll-container">
    <h3>Fases</h3>
    @foreach (var fase in Model.Fases)
    {
        <div class="fase-card">
            <div class="fase-header">
                <h4>@fase.Nombre</h4>
            </div>

            <div class="tareas-list">
                <h5>Tareas</h5>
                <ul>
                    @foreach (var tarea in fase.Tareas)
                    {
                        <li>
                            <label class="checkbox-btn">
                                <input id="checkbox-@tarea.Id" type="checkbox"
                                @(tarea.Completada ? "checked" : "")>
                                <span class="checkmark"></span>
                            </label>
                            <strong>@tarea.Nombre</strong> -
                            Inicio: @tarea.FechaInicio.ToShortDateString() -
                            Fin: @tarea.FechaFin.ToShortDateString()
                        </li>
                    }
                </ul>
                <a href="@Url.Action("AgregarTareas", "Proyecto", new { faseId = fase.Id })" class="btn btn-outline-primary">Agregar Tareas</a>
            </div>
        </div>
    }
</div>

<div class="return-button">
    <a asp-action="Proyectos" asp-controller="Proyecto" class="btn btn-secondary">Volver a Proyectos</a>
    <button id="saveChangesBtn" class="btn btn-primary">Guardar Cambios</button>
</div>

<!-- Modal de Confirmación -->
<div id="confirmModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <p>¿Estás seguro de que deseas guardar los cambios?</p>
        <button id="confirmSave" class="btn btn-success">Confirmar</button>
        <button id="cancelSave" class="btn btn-secondary">Cancelar</button>
    </div>
</div>

@section Scripts {
    <script>
        // Manejo del Modal
        document.getElementById('saveChangesBtn').onclick = function () {
            document.getElementById('confirmModal').style.display = 'block';
        };

        document.getElementById('cancelSave').onclick = function () {
            document.getElementById('confirmModal').style.display = 'none';
        };

        document.getElementById('confirmSave').onclick = function () {
            document.getElementById('confirmModal').style.display = 'none';
            guardarCambios();
        };

        // Manejo de Guardar Cambios
        function guardarCambios() {
            let tareasCompletadas = {};
            document.querySelectorAll('input[type="checkbox"]').forEach((checkbox) => {
                tareasCompletadas[checkbox.id.split('-')[1]] = checkbox.checked;
            });
            fetch('@Url.Action("ActualizarTareas", "Proyecto")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(tareasCompletadas)
            }).then(response => {
                if (response.ok) {
                    alert('Cambios guardados exitosamente');
                }
            });
        }
    </script>
}
