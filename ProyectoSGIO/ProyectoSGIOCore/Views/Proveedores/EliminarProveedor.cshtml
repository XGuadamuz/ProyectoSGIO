@model ProyectoSGIOCore.Models.Proveedor
@{
    ViewBag.Title = "Eliminar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Eliminar Proveedor</h2>

    <div class="alert alert-warning">
        <p>¿Estás seguro de que deseas eliminar el proveedor @Model.Nombre? Esta acción no se puede deshacer.</p>
    </div>

    <form asp-action="EliminarProveedorConfirmado" asp-controller="Proveedores" method="post">
        <input type="hidden" name="id" value="@Model.IdProveedor" />
        @Html.AntiForgeryToken()

        <div class="text-center">
            <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
            <a asp-action="VisualizarProveedores" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>