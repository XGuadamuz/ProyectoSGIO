@model IEnumerable<ProyectoSGIOCore.Models.Proveedor>
@{
    ViewBag.Title = "VisualizarProveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Lista de Proveedores</h2>

    <div class="text-end mb-3">
        <a href="~/Proveedores/RegistroProveedor" class="btn btn-primary">Registrar Nuevo Proveedor</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo Electrónico</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var proveedor in Model)
            {
                <tr>
                    <td>@proveedor.IdProveedor</td>
                    <td>@proveedor.Nombre</td>
                    <td>@proveedor.Correo</td>
                    <td>@proveedor.Telefono</td>
                    <td>@proveedor.Direccion</td>
                    <td>
                        @if (proveedor.Estado)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </td>
                    <td>
                        <!-- Botón de editar -->
                        <a asp-action="EditarProveedor" asp-route-id="@proveedor.IdProveedor" class="btn btn-warning btn-sm">Editar</a>

                        <!-- Botón de eliminar -->
                        <a asp-action="EliminarProveedor" asp-route-id="@proveedor.IdProveedor" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

