
@{
    ViewBag.Title = "VisualizarFacturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Estado de Facturas</h2>

    <!-- Barra de Búsqueda y Filtros -->
    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" id="buscarFactura" placeholder="Buscar por número de factura o proveedor">
        </div>
        <div class="col-md-3">
            <select class="form-select" id="filtroEstado">
                <option selected disabled>Filtrar por estado</option>
                <option value="pendiente">Pendiente</option>
                <option value="pagado">Pagado</option>
                <option value="vencido">Vencido</option>
                <option value="enDisputa">En Disputa</option>
            </select>
        </div>
        <div class="col-md-3">
            <input type="date" class="form-control" id="filtroFecha">
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary w-100" id="buscarBtn">Buscar</button>
        </div>
    </div>

    <!-- Tabla de Facturas -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th><a href="#">Fecha de Emisión</a></th>
                <th>Número de Factura</th>
                <th>Proveedor</th>
                <th>Monto</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>2024-08-15</td>
                <td>F-12345</td>
                <td>Proveedor ABC</td>
                <td>$1,500.00</td>
                <td><span class="badge bg-warning">Pendiente</span></td>
                <td>
                    <button class="btn btn-sm btn-info">Ver Detalles</button>
                </td>
            </tr>
            <tr>
                <td>2024-07-10</td>
                <td>F-67890</td>
                <td>Proveedor XYZ</td>
                <td>$2,000.00</td>
                <td><span class="badge bg-success">Pagado</span></td>
                <td>
                    <button class="btn btn-sm btn-info">Ver Detalles</button>
                </td>
            </tr>
            <!-- Más facturas -->
        </tbody>
    </table>
</div>