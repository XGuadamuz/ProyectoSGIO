
@{
    ViewBag.Title = "CierreFinancieroMes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Confirmar Cierre Anual</h2>

    <!-- Resumen de auditoría interna -->
    <h4 class="mb-3">Resumen de Auditoría Interna</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Impacto</th>
                <th>Recomendaciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Discrepancia en cuenta de gastos operativos</td>
                <td>$1,500.00</td>
                <td>Revisar ajustes en la cuenta de gastos operativos</td>
            </tr>
            <!-- Más hallazgos -->
        </tbody>
    </table>

    <!-- Botón de Confirmar Cierre -->
    <button class="btn btn-success w-100 mt-4" id="confirmarCierreAnualBtn">Confirmar y Finalizar Cierre Anual</button>

    <!-- Botón de Generar Reporte de Auditoría Externa -->
    <button class="btn btn-secondary w-100 mt-2" id="generarReporteAuditoriaBtn">Generar Reporte para Auditoría Externa</button>
</div>